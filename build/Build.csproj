<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework Condition="'$(OS)' == 'Windows_NT'">net8.0-windows</TargetFramework>
    <TargetFramework Condition="'$(OS)' != 'Windows_NT'">net8.0</TargetFramework>
    <UseWPF Condition="'$(OS)' == 'Windows_NT'">true</UseWPF>
    <DefineConstants Condition="'$(OS)' == 'Windows_NT'">WINDOWS</DefineConstants>
    <Nullable>disable</Nullable>
	<NoWarn>CS0649;CS0169;MSB3277</NoWarn>
    <AssemblyName>RcaPlugin.Build</AssemblyName>
    <RootNamespace>RcaPlugin.Build</RootNamespace>
    <EnableDefaultItems>false</EnableDefaultItems>
    <PlatformTarget>x64</PlatformTarget>
    <RevitVersion>2026</RevitVersion>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\src\RcaPlugin\RcaPlugin.csproj" />
  </ItemGroup>

  <!-- The build project now references the main plugin project -->

  <!-- Deployment targets are now handled by the RcaPlugin project -->

</Project>